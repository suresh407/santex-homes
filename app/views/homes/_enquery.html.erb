      <div class="border-box">
      <%= form_for @home_info_enquery do |f| %>
        <div class="row">
          <div class="col-md-12">
            <label>Name *</label>
             <%= f.text_field :name, :class => 'form-control', required: true %>
          </div>
        </div> 
        <div class="row">
          <div class="col-md-12">
            <label>Telephone *</label>
            <%= f.text_field :phone, :class => 'form-control', required: true %>
          </div>
        </div> 
        <div class="row">
          <div class="col-md-12">
            <label>email *</label>
            <%= f.text_field :email, :class => 'form-control', required: true %>
          </div>
        </div> 
        <div class="row">
          <div class="col-md-12">
            <label>comments*</label>
             <%= f.text_field :comments, :class => 'form-control', required: true %>

          </div>
        </div>
        <%= f.hidden_field :home_id, value: @home.id %>
        <div class="row">
          <div class="col-md-12">
            <%= f.submit "Send inquiry", :class => 'btn btn-info' %>
          </div>
        </div>  
        <% end %>
      </div>
