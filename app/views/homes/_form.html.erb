<div class="row">
  <div class="col-md-10">
     
        <%= form_for @home, :html => { :class => 'form-horizontal', multipart: true } do |f| %>
        <div class="form-group">
        <label>Home type</label>
          <%= f.select :home_type, [["Single wide","Single wide"], ["Double wide","Double wide"], ["Triple wide","Triple wide"],
                                                    ["Others","Others"],
                                                     ["Hot deals","Hot deals"],
                                            ], {id: 'home_type', prompt: 'Select...'},  :required => false, class: 'form-control' %>
      </div>                                      

      <div class="form-group">
        <%= f.label :name, :class => 'control-label' %>
        <%= f.text_field :name, :class => 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :description, :class => 'control-label' %>
        <%= f.text_field :description, :class => 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :no_of_bedrooms, :class => 'control-label' %>
        <%= f.text_field :no_of_bedrooms, :class => 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :building_method, :class => 'control-label' %>
        <%= f.text_field :building_method, :class => 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :series, :class => 'control-label' %>
        <%= f.text_field :series, :class => 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :sft, :class => 'control-label' %>
        <%= f.text_field :sft, :class => 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :no_of_bathrooms, :class => 'control-label' %>
        <%= f.text_field :no_of_bathrooms, :class => 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :other, :class => 'control-label' %>
        <%= f.text_field :other, :class => 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :price, :class => 'control-label' %>
        <%= f.text_field :price, :class => 'form-control' %>
      </div>


      <div class="form-group">
        <%= f.label :images, :class => 'control-label' %>
        <%= file_field_tag "images[]", type: :file, multiple: true %>
      </div>

      <div class="form-actions">
        <%= f.submit nil, :class => 'btn btn-info' %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                    homes_path, :class => 'btn btn-danger' %>
      </div>
    <% end %>
  </div>
</div>    

